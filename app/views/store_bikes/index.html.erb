<h3>store bikes</h3>

<% @store_bikes.each do |store_bike| %>
  <div class="store_bike">
    <%= store_bike.store.name %>  
    <%= store_bike.bike.name %> 
    <%= link_to "Show all bookings", store_bike_bookings_path(store_bike) %>
    <%= link_to "Delete", store_bike_path(store_bike), data: { confirm: 'Are you sure?' }, method: :delete %>
    <%= link_to "Edit", edit_store_bike_path(store_bike) %>
    <%= link_to "Add booking", new_store_bike_booking_path(store_bike) %>
  </div>
  
  <%= link_to 'New Store Bike', new_store_bike_path %>
<% end %>
